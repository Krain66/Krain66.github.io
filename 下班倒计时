  <script>
    // è·å–DOMå…ƒç´ 
    const hoursEl = document.getElementById('hours');
    const minutesEl = document.getElementById('minutes');
    const secondsEl = document.getElementById('seconds');
    const endTimeInput = document.getElementById('endTime');
    const setTimeBtn = document.getElementById('setTimeBtn');
    const historyEl = document.getElementById('history');
    const celebrationModal = document.getElementById('celebrationModal');
    const celebrationText = document.getElementById('celebrationText');
    const celebrationCountdown = document.getElementById('celebrationCountdown');
    const countdownSecondsEl = document.getElementById('countdownSeconds');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const celebrationSound = document.getElementById('celebrationSound');
    
    // å­˜å‚¨å†å²è®°å½•
    let history = JSON.parse(localStorage.getItem('ä¸‹ç­å†å²è®°å½•')) || [];
    
    // åˆå§‹åŒ–ä¸‹ç­æ—¶é—´ (é»˜è®¤18:00)
    let targetTime = new Date();
    const targetTimeStr = endTimeInput.value;
    const [targetHour, targetMinute] = targetTimeStr.split(':').map(Number);
    targetTime.setHours(targetHour, targetMinute, 0, 0);
    
    // æ¸²æŸ“å†å²è®°å½•
    function renderHistory() {
      if (history.length === 0) {
        historyEl.innerHTML = '<p class="text-dark/50 italic text-center">æš‚æ— ä¸‹ç­è®°å½•</p>';
        return;
      }
      
      historyEl.innerHTML = '';
      history.forEach((record, index) => {
        const dateObj = new Date(record);
        const dateStr = dateObj.toLocaleDateString();
        const timeStr = dateObj.toLocaleTimeString();
        
        const recordEl = document.createElement('div');
        recordEl.className = `bg-light/80 p-4 rounded-xl shadow-sm ${index % 2 === 0 ? 'bg-primary/5' : 'bg-secondary/5'} flex justify-between items-center`;
        recordEl.innerHTML = `
          <span class="font-medium">${dateStr} ${timeStr}</span>
          <i class="fa fa-trophy text-accent"></i>
        `;
        historyEl.appendChild(recordEl);
      });
    }
    
    // æ˜¾ç¤ºåº†ç¥å¼¹çª—
    function showCelebration() {
      // æ’­æ”¾éŸ³æ•ˆ
      celebrationSound.play().catch(e => console.log('éŸ³æ•ˆæ’­æ”¾å¤±è´¥:', e));
      
      // è®°å½•å½“å‰æ—¶é—´
      const now = new Date();
      history.unshift(now.toISOString());
      localStorage.setItem('ä¸‹ç­å†å²è®°å½•', JSON.stringify(history));
      renderHistory();
      
      // æ˜¾ç¤ºå¼¹çª—
      celebrationModal.classList.remove('opacity-0', 'pointer-events-none');
      celebrationModal.querySelector('div').classList.remove('translate-y-10');
      
      // æ·»åŠ  confetti æ•ˆæœ
      addConfetti();
      
      // å€’è®¡æ—¶
      let countdown = 10;
      countdownSecondsEl.textContent = countdown;
      
      const countdownInterval = setInterval(() => {
        countdown--;
        countdownSecondsEl.textContent = countdown;
        
        if (countdown <= 0) {
          closeCelebration();
          clearInterval(countdownInterval);
        }
      }, 1000);
    }
    
    // å…³é—­åº†ç¥å¼¹çª—
    function closeCelebration() {
      celebrationModal.classList.add('opacity-0', 'pointer-events-none');
      celebrationModal.querySelector('div').classList.add('translate-y-10');
      
      // ç§»é™¤ confetti
      removeConfetti();
    }
    
    // æ·»åŠ  confetti æ•ˆæœ
    function addConfetti() {
      const colors = ['#FF3366', '#00CCFF', '#FFCC00', '#FF6600', '#33FF99'];
      const container = document.body;
      const count = 100;
      
      for (let i = 0; i < count; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = `${Math.random() * 100}%`;
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.animationDelay = `${Math.random() * 3}s`;
        confetti.style.width = `${5 + Math.random() * 15}px`;
        confetti.style.height = `${5 + Math.random() * 15}px`;
        container.appendChild(confetti);
        
        // 10ç§’åç§»é™¤confetti
        setTimeout(() => {
          confetti.remove();
        }, 10000);
      }
    }
    
    // ç§»é™¤ confetti æ•ˆæœ
    function removeConfetti() {
      const confetti = document.querySelectorAll('.confetti');
      confetti.forEach(c => c.remove());
    }
    
    // æ›´æ–°å€’è®¡æ—¶
    function updateCountdown() {
      const now = new Date();
      
      // å¦‚æœç›®æ ‡æ—¶é—´å°äºå½“å‰æ—¶é—´ï¼Œè®¾ç½®ä¸ºæ˜å¤©åŒä¸€æ—¶é—´
      if (targetTime <= now) {
        targetTime.setDate(targetTime.getDate() + 1);
      }
      
      const diff = targetTime - now;
      
      // è®¡ç®—æ—¶ã€åˆ†ã€ç§’
      const hours = Math.floor(diff / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      
      // æ˜¾ç¤ºå€’è®¡æ—¶
      hoursEl.textContent = hours.toString().padStart(2, '0');
      minutesEl.textContent = minutes.toString().padStart(2, '0');
      secondsEl.textContent = seconds.toString().padStart(2, '0');
      
      // å¦‚æœå€’è®¡æ—¶ç»“æŸ
      if (diff <= 0) {
        showCelebration();
      }
    }
    
    // è®¾ç½®ä¸‹ç­æ—¶é—´
    setTimeBtn.addEventListener('click', () => {
      const timeStr = endTimeInput.value;
      if (!timeStr) return;
      
      const [hour, minute] = timeStr.split(':').map(Number);
      if (isNaN(hour) || isNaN(minute) || hour < 0 || hour > 23 || minute < 0 || minute > 59) {
        alert('è¯·è¾“å…¥æœ‰æ•ˆçš„æ—¶é—´æ ¼å¼ (HH:MM)');
        return;
      }
      
      targetTime = new Date();
      targetTime.setHours(hour, minute, 0, 0);
      
      // å¦‚æœè®¾ç½®çš„æ—¶é—´å·²ç»è¿‡äº†ä»Šå¤©ï¼Œè®¾ç½®ä¸ºæ˜å¤©
      if (targetTime < new Date()) {
        targetTime.setDate(targetTime.getDate() + 1);
      }
      
      // æ˜¾ç¤ºæˆåŠŸæ¶ˆæ¯
      alert(`å·²è®¾ç½®ä¸‹ç­æ—¶é—´ä¸º ${timeStr}`);
    });
    
    // å…³é—­å¼¹çª—æŒ‰é’®
    closeModalBtn.addEventListener('click', closeCelebration);
    
    // åˆå§‹åŒ–
    renderHistory();
    updateCountdown();
    setInterval(updateCountdown, 1000);
  </script>
